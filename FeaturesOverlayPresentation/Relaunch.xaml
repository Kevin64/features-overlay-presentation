<Window x:Class="FeaturesOverlayPresentation.Relaunch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeaturesOverlayPresentation"
        mc:Ignorable="d"
        Title="Assistir novamente?" Height="146.374" Width="351.978" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="0,0,4.5,-18">
        <Label Content="Deseja visualizar o tutorial novamente?" HorizontalAlignment="Left" Margin="16,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="YesButton" Content="Sim" HorizontalAlignment="Left" Margin="13,49,0,0" VerticalAlignment="Top" Width="152" Click="YesButton_Click"/>
        <Button x:Name="NoButton" Content="Não" HorizontalAlignment="Left" Margin="170,49,0,0" VerticalAlignment="Top" Width="152" Click="NoButton_Click"/>
        <Button x:Name="YesLaterButton" Content="Sim, executar na próxima inicialização do computador" HorizontalAlignment="Left" Margin="13,74,0,0" VerticalAlignment="Top" Width="309" Click="YesLaterButton_Click"/>

    </Grid>
</Window>
